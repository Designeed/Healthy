<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Healthy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ToxicGreen</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <item name="android:windowBackground">@drawable/ic_bg_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ToxicGreen</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status and navigation bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/ToxicGreen</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppBarColor">
        <item name="backgroundTint">@color/ToxicGreen</item>
    </style>

    <style name="ItemBackground">
        <item name="android:background">@drawable/rounded_template</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="CardBackground">
        <item name="android:layout_width">140sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">3sp</item>
        <item name="android:layout_marginTop">12sp</item>
        <item name="android:layout_marginBottom">30sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:background">@drawable/rounded_template</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/TextColor</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="RecyclerBackground">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">@drawable/light_style_spinner</item>
    </style>
</resources>

