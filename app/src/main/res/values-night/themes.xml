<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Healthy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DarkToxicGreen</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <item name="android:windowBackground">@drawable/ic_bg_dark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/DarkToxicGreen</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status and navigation bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/DarkToxicGreen</item>

        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/dark_splash_screen</item>>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/DarkToxicGreen</item>
    </style>

    <style name="AppBarColor">
        <item name="backgroundTint">@color/DarkToxicGreen</item>
    </style>

    <style name="ItemBackground">
        <item name="android:background">@drawable/rounded_template</item>
        <item name="android:backgroundTint">@color/ItemBackgroundColor</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12sp</item>
        <item name="android:layout_marginBottom">30sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:inputType">number|textNoSuggestions</item>
        <item name="android:background">@drawable/rounded_template</item>
        <item name="android:backgroundTint">#7EAA77</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>