<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Healthy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DarkToxicGreen</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <item name="android:windowBackground">@color/DarkMainBackground</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/DarkToxicGreen</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status and navigation bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/DarkToxicGreen</item>

        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/dark_splash_screen</item>>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/DarkToxicGreen</item>
    </style>

    <style name="AppBarColor">
        <item name="backgroundTint">@color/DarkToxicGreen</item>
    </style>
</resources>